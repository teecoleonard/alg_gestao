<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Estilo para os Chips de filtro -->
    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>
    
    <!-- Estilo para TextInputLayout dos diálogos de cadastro -->
    <style name="Widget.ALG.TextInputLayout.Dialog" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
    
    <!-- Estilo para TextInputLayout de dropdown (ExposedDropdownMenu) -->
    <style name="Widget.ALG.TextInputLayout.ExposedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="endIconTint">@color/primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
    
    <!-- Estilo para títulos de diálogos do Material -->
    <style name="MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Estilo para dialogos normais -->
    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title</item>
    </style>
    
    <!-- Estilo para dialog de detalhes de equipamento -->
    <style name="EquipamentoDetailDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title</item>
    </style>
    
    <!-- Estilo para dialogos em tela cheia -->
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    
    <!-- Estilo personalizado para o diálogo de equipamentos -->
    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>
    
    <!-- Estilo personalizado para NavigationView -->
    <style name="Widget.ALG.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.ALG.NavigationItem</item>
        <item name="itemIconPadding">16dp</item>
        <item name="itemHorizontalPadding">24dp</item>
        <item name="subheaderTextAppearance">@style/TextAppearance.ALG.NavigationItem</item>
        <item name="android:textAppearance">@style/TextAppearance.ALG.NavigationItem</item>
        <item name="itemShapeAppearance">@style/ShapeAppearance.ALG.Navigation</item>
    </style>
    
    <!-- Estilo para os itens do menu de navegação -->
    <style name="TextAppearance.ALG.NavigationItem" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Estilo para a forma dos itens de navegação -->
    <style name="ShapeAppearance.ALG.Navigation" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- Tema de sobreposição para TextInputLayout -->
    <style name="ThemeOverlay.ALG.TextInputLayout" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ALG.Caption</item>
    </style>

    <!-- Estilo para o diálogo de assinatura -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>
</resources> 