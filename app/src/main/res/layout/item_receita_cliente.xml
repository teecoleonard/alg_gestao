<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome do Cliente -->
        <TextView
            android:id="@+id/tvClienteNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Cliente"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Valor Mensal -->
        <TextView
            android:id="@+id/tvValorMensal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 0,00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/success"
            android:layout_marginTop="4dp" />

        <!-- Linha com Contratos Ativos e Ticket Médio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvContratosAtivos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 contrato(s) ativo(s)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvParticipacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                tools:text="15%" />

        </LinearLayout>

        <!-- Ticket Médio -->
        <TextView
            android:id="@+id/tvTicketMedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket médio: R$ 0,00"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 