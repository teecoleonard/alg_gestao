<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.financial.ResumoMensalClienteActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Resumo Mensal"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"
            app:menu="@menu/menu_resumo_mensal" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ConteÃºdo Principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header do Cliente -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nome do Cliente -->
                    <TextView
                        android:id="@+id/tvNomeCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do Cliente"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <!-- MÃªs de ReferÃªncia -->
                    <TextView
                        android:id="@+id/tvMesReferencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Janeiro/2024"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/divider" />

                    <!-- Valores Principais -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Valor Mensal -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valor Mensal"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvValorMensal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 0,00"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                        </LinearLayout>

                        <!-- DevoluÃ§Ãµes -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DevoluÃ§Ãµes"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvValorDevolucoes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 0,00"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/error" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Filtros por PerÃ­odo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header do Filtro (sempre visÃ­vel e clicÃ¡vel) -->
                    <LinearLayout
                        android:id="@+id/layoutHeaderFiltro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“… Alterar PerÃ­odo de AnÃ¡lise"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/poppins_medium" />

                        <ImageView
                            android:id="@+id/ivExpandirFiltro"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:tint="@color/text_secondary"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />

                    </LinearLayout>

                    <!-- ConteÃºdo do Filtro (inicialmente oculto) -->
                    <LinearLayout
                        android:id="@+id/layoutConteudoFiltro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:visibility="gone">

                        <!-- Seletor de PerÃ­odo -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:startIconDrawable="@drawable/ic_calendar_month"
                                app:hintTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/primary"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/actvMes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="MÃªs"
                                    android:inputType="none"
                                    android:focusable="false"
                                    android:fontFamily="@font/poppins" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                app:startIconDrawable="@drawable/ic_calendar_month"
                                app:hintTextColor="@color/text_secondary"
                                app:boxStrokeColor="@color/primary"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:id="@+id/actvAno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Ano"
                                    android:inputType="none"
                                    android:focusable="false"
                                    android:fontFamily="@font/poppins" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- BotÃµes de Filtro -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAplicarFiltro"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="ðŸ“Š Ver PerÃ­odo"
                                android:textSize="14sp"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMesAtual"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="ðŸ“… MÃªs Atual"
                                android:textSize="14sp"
                                android:textAllCaps="false"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- EstatÃ­sticas do MÃªs -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumo do MÃªs"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Contratos Ativos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvContratosAtivos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/success" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contratos Ativos"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Novos Contratos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvNovoContratos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Novos no MÃªs"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- DevoluÃ§Ãµes -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvDevolucoesMes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DevoluÃ§Ãµes"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Ticket MÃ©dio -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvTicketMedio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ticket MÃ©dio"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de Contratos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContratos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contratos Detalhados"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:id="@+id/ivExpandContratos"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvContratos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        tools:listitem="@layout/item_contrato_resumo"
                        tools:itemCount="3" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de DevoluÃ§Ãµes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDevolucoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="DevoluÃ§Ãµes do MÃªs"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:id="@+id/ivExpandDevolucoes"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDevolucoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        tools:listitem="@layout/item_devolucao_resumo"
                        tools:itemCount="2" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BotÃµes de AÃ§Ã£o -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGerarPdf"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Gerar PDF"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_file_pdf"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCompartilhar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Compartilhar"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_share"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading -->
    <include
        android:id="@+id/loadingView"
        layout="@layout/loading_overlay"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 