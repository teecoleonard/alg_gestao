<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header do Contrato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNumeroContrato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contrato #001"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Contrato #001" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatusContrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASSINADO"
                app:chipBackgroundColor="@color/success"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:chipMinHeight="24dp" />

        </LinearLayout>

        <!-- Informações do Contrato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Valor Mensal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Mensal"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvValorMensalContrato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:text="R$ 1.500,00" />

            </LinearLayout>

            <!-- Período -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Período"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvPeriodoContrato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mensal"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    tools:text="Mensal" />

            </LinearLayout>

            <!-- Data Assinatura -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assinatura"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvDataAssinatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    tools:text="01/01/2024" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 