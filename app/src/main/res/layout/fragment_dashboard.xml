<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:background="@color/background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
            <!-- Estado vazio (inicialmente invisível) -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="Nenhum projeto"
                    android:src="@drawable/ic_no_data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nenhum projeto encontrado"
                    android:textAppearance="@style/TextAppearance.ALG.Title"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Não há projetos para mostrar no momento."
                    android:textAppearance="@style/TextAppearance.ALG.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp">

                <!-- Campo de busca -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSearch"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/search"
                            android:textColor="@color/text_secondary" />

                        <ImageView
                            android:id="@+id/ivSearch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_search"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Seção de Insights -->
                <TextView
                    android:id="@+id/tvInsightsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Insights"
                    android:textAppearance="@style/TextAppearance.ALG.Title"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSearch" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver todos"
                    android:textAppearance="@style/TextAppearance.ALG.Body"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvInsightsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvInsightsTitle" />

                <!-- Cards de Insights -->
                <LinearLayout
                    android:id="@+id/llInsightsCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tvInsightsTitle">

                    <!-- Card Materiais -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMaterials"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Materiais"
                                android:textAppearance="@style/TextAppearance.ALG.Body"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvMaterialsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="124"
                                android:textAppearance="@style/TextAppearance.ALG.Title"
                                android:textColor="@color/primary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_arrow_right"
                                app:tint="@color/text_secondary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Trabalhadores -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWorkers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contratos"
                                android:textAppearance="@style/TextAppearance.ALG.Body"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvWorkersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="95"
                                android:textAppearance="@style/TextAppearance.ALG.Title"
                                android:textColor="@color/primary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_arrow_right"
                                app:tint="@color/text_secondary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Tarefas -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTasks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clientes"
                                android:textAppearance="@style/TextAppearance.ALG.Body"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvTasksCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="23"
                                android:textAppearance="@style/TextAppearance.ALG.Title"
                                android:textColor="@color/tertiary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_arrow_right"
                                app:tint="@color/text_secondary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Seção Todos os Projetos -->
                <TextView
                    android:id="@+id/tvAllProjectsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Todos os Contratos"
                    android:textAppearance="@style/TextAppearance.ALG.Title"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llInsightsCards" />

                <!-- Lista de projetos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerProjects"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingBottom="80dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAllProjectsTitle"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_project" />

                <!-- Botão flutuante para Contratos -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabContratos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:contentDescription="Adicionar Contrato"
                    android:src="@drawable/ic_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout> 