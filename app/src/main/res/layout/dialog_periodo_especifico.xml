<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background_rounded_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š"
            android:textSize="24sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PerÃ­odo EspecÃ­fico"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/tvClienteNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente Selecionado"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o mÃªs e ano para visualizar:"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="24dp" />

    <!-- Seletores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- Seletor de MÃªs -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="MÃªs"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <AutoCompleteTextView
                android:id="@+id/actvMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:completionThreshold="0"
                android:fontFamily="@font/poppins" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Seletor de Ano -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="Ano"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <AutoCompleteTextView
                android:id="@+id/actvAno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:completionThreshold="0"
                android:fontFamily="@font/poppins" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- BotÃµes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="âŒ Cancelar"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:backgroundTint="@color/background_light"
            app:strokeColor="@color/border_light"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:elevation="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="âœ… Confirmar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:elevation="2dp" />

    </LinearLayout>

</LinearLayout> 