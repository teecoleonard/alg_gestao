<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header da Devolução -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNumeroDevolucao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Devolução #001"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Devolução #001" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatusDevolucao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROCESSADA"
                app:chipBackgroundColor="@color/warning"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:chipMinHeight="24dp" />

        </LinearLayout>

        <!-- Equipamento -->
        <TextView
            android:id="@+id/tvEquipamentoDevolucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Equipamento devolvido"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            tools:text="Escavadeira CAT 320" />

        <!-- Informações da Devolução -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Valor da Multa -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Multa"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvValorMulta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/error"
                    tools:text="R$ 500,00" />

            </LinearLayout>

            <!-- Data da Devolução -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Devolução"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvDataDevolucao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/01/2024"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    tools:text="15/01/2024" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 