<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagem do projeto -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProjectImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivProjectImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Imagem do projeto"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_project" />
        </androidx.cardview.widget.CardView>

        <!-- Nome do projeto -->
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.ALG.Title"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/ivProjectMenu"
            app:layout_constraintStart_toEndOf="@+id/cardProjectImage"
            app:layout_constraintTop_toTopOf="@+id/cardProjectImage"
            tools:text="Monte Carlo Casino" />

        <!-- Localização do projeto -->
        <TextView
            android:id="@+id/tvProjectLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.ALG.Subtitle"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvProjectName"
            app:layout_constraintStart_toStartOf="@+id/tvProjectName"
            app:layout_constraintTop_toBottomOf="@+id/tvProjectName"
            tools:text="Surat, Gujarat, Índia" />

        <!-- Menu do projeto -->
        <ImageView
            android:id="@+id/ivProjectMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary" />

        <!-- Status do projeto -->
        <TextView
            android:id="@+id/tvProjectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_status_in_progress"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Em Andamento"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:drawableTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardProjectImage" />

        <!-- Orçamento -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBudget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#E9FFF2"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/cardExpenses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProjectStatus">

            <TextView
                android:id="@+id/tvBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_budget"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textColor="@color/success"
                android:textSize="12sp"
                app:drawableTint="@color/success"
                tools:text="R$ 5,48,12,459" />
        </androidx.cardview.widget.CardView>

        <!-- Despesas -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#FFF0F4"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardBudget"
            app:layout_constraintTop_toTopOf="@+id/cardBudget">

            <TextView
                android:id="@+id/tvExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_expenses"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textColor="@color/error"
                android:textSize="12sp"
                app:drawableTint="@color/error"
                tools:text="R$ 1,84,21,954" />
        </androidx.cardview.widget.CardView>

        <!-- Datas do projeto -->
        <TextView
            android:id="@+id/tvStartDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Início:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardBudget" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tvStartDateLabel"
            app:layout_constraintTop_toTopOf="@+id/tvStartDateLabel"
            tools:text="30/09/2024" />

        <TextView
            android:id="@+id/tvEndDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Término:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tvStartDate"
            app:layout_constraintTop_toTopOf="@+id/tvStartDateLabel" />

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tvEndDateLabel"
            app:layout_constraintTop_toTopOf="@+id/tvEndDateLabel"
            tools:text="01/01/2026" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView> 